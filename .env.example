# Environment Configuration Template
# Copy this file to .env.local and fill in the values

# =================================================================
# Core Application Configuration
# =================================================================
NODE_ENV=development
PORT=3000
HOST=localhost

# =================================================================
# Database Configuration
# =================================================================
DATABASE_URL=mongodb://admin:password@localhost:27017/chainbet?authSource=admin
MONGODB_URI=mongodb://admin:password@localhost:27017/chainbet?authSource=admin

# =================================================================
# Cache Configuration
# =================================================================
REDIS_URL=redis://localhost:6379

# =================================================================
# Search Configuration
# =================================================================
ELASTICSEARCH_URL=http://localhost:9200

# =================================================================
# Blockchain Configuration
# =================================================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_CHAIN_ID=31337
PRIVATE_KEY=your_private_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key

# =================================================================
# External API Configuration
# =================================================================
GEMINI_API_KEY=your_gemini_api_key
GEMINI_BASE_URL=https://api.gemini.com

# =================================================================
# Monitoring & Analytics
# =================================================================
SENTRY_DSN=your_sentry_dsn
CHROMATIC_PROJECT_TOKEN=your_chromatic_token

# =================================================================
# Data Ingestion Configuration
# =================================================================
INGESTION_BATCH_SIZE=100
INGESTION_INTERVAL_MS=5000
INGESTION_RETRY_ATTEMPTS=3
INGESTION_RETRY_DELAY_MS=1000

# =================================================================
# Development & Testing
# =================================================================
CI=false
PLAYWRIGHT_HEADLESS=true
REPORT_GAS=false

# =================================================================
# Deployment Configuration
# =================================================================
VERCEL_URL=
EXPO_TOKEN=your_expo_token

# =================================================================
# Security Configuration
# =================================================================
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12
