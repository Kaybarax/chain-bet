{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "docker-compose*.yml",
    "Dockerfile*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "HOST",
    "DATABASE_URL",
    "MONGODB_URI",
    "REDIS_URL",
    "ELASTICSEARCH_URL",
    "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
    "NEXT_PUBLIC_CHAIN_ID",
    "PRIVATE_KEY",
    "ETHERSCAN_API_KEY",
    "GEMINI_API_KEY",
    "GEMINI_BASE_URL",
    "CHROMATIC_PROJECT_TOKEN",
    "SENTRY_DSN",
    "INGESTION_BATCH_SIZE",
    "INGESTION_INTERVAL_MS",
    "INGESTION_RETRY_ATTEMPTS",
    "INGESTION_RETRY_DELAY_MS",
    "CI",
    "VERCEL_URL",
    "EXPO_TOKEN"
  ],
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "storybook-static/**",
        "artifacts/**",
        "typechain-types/**",
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
        "NEXT_PUBLIC_CHAIN_ID",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL",
        "PRIVATE_KEY",
        "ETHERSCAN_API_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
        "NEXT_PUBLIC_CHAIN_ID",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check"
      ],
      "outputs": [
        "tsconfig.tsbuildinfo",
        "*.tsbuildinfo"
      ]
    },
    "test": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        "coverage/**",
        "test-results/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        "test-results/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        "playwright-report/**",
        "test-results/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "MONGODB_URI",
        "REDIS_URL",
        "ELASTICSEARCH_URL",
        "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
        "NEXT_PUBLIC_CHAIN_ID"
      ]
    },
    "clean": {
      "cache": false
    },
    "contracts:compile": {
      "dependsOn": [
        "^contracts:compile"
      ],
      "outputs": [
        "artifacts/**",
        "cache/**",
        "typechain-types/**"
      ]
    },
    "contracts:deploy": {
      "dependsOn": [
        "contracts:compile"
      ],
      "env": [
        "PRIVATE_KEY",
        "ETHERSCAN_API_KEY",
        "NEXT_PUBLIC_CHAIN_ID"
      ]
    },
    "contracts:verify": {
      "dependsOn": [
        "contracts:deploy"
      ],
      "env": [
        "ETHERSCAN_API_KEY",
        "NEXT_PUBLIC_CHAIN_ID"
      ]
    },
    "contracts:test": {
      "dependsOn": [
        "contracts:compile"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "REPORT_GAS"
      ]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "CHROMATIC_PROJECT_TOKEN"
      ]
    },
    "storybook:build": {
      "dependsOn": [
        "^build",
        "type-check"
      ],
      "outputs": [
        "storybook-static/**"
      ],
      "env": [
        "NODE_ENV",
        "CHROMATIC_PROJECT_TOKEN"
      ]
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": [
        "^docs:build"
      ],
      "outputs": [
        "build/**",
        ".docusaurus/**"
      ]
    },
    "db:migrate": {
      "cache": false,
      "env": [
        "DATABASE_URL",
        "MONGODB_URI"
      ]
    },
    "db:seed": {
      "cache": false,
      "env": [
        "DATABASE_URL",
        "MONGODB_URI"
      ]
    },
    "db:reset": {
      "cache": false,
      "env": [
        "DATABASE_URL",
        "MONGODB_URI"
      ]
    },
    "docker:build": {
      "cache": false,
      "dependsOn": [
        "build"
      ]
    },
    "docker:dev": {
      "cache": false,
      "persistent": true
    },
    "docker:test": {
      "cache": false,
      "dependsOn": [
        "test"
      ]
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint",
        "type-check"
      ],
      "env": [
        "NODE_ENV",
        "VERCEL_URL",
        "DATABASE_URL",
        "REDIS_URL",
        "PRIVATE_KEY"
      ]
    }
  }
}
