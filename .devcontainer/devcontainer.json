{
  "name": "ChainBet Development Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/app",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "ms-playwright.playwright",
        "ms-vscode.test-adapter-converter",
        "ms-vscode.js-debug",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-pull-request-github",
        "eamodio.gitlens",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-todo-highlight",
        "gruntfuggly.todo-tree",
        "ms-vscode.vscode-thunder-client",
        "humao.rest-client",
        "ms-vscode.hexeditor",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-cosmosdb",
        "ms-vscode.vscode-node-azure-pack"
      ],
      "settings": {
        "typescript.preferences.quoteStyle": "single",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.associations": {
          "*.env.*": "dotenv"
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "tailwindCSS.experimental.classRegex": [
          "tw`([^`]*)",
          "tw=\"([^\"]*)",
          "tw={\"([^\"}]*)",
          "tw\\.\\w+`([^`]*)",
          "tw\\(.*?\\)`([^`]*)"
        ]
      }
    }
  },

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached"
  ],

  "forwardPorts": [3000, 3001, 3002, 3003, 6379, 9200, 9090, 27017],
  "portsAttributes": {
    "3000": {
      "label": "Web App",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "3002": {
      "label": "Storybook",
      "onAutoForward": "notify"
    },
    "3003": {
      "label": "Grafana",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "9200": {
      "label": "Elasticsearch",
      "onAutoForward": "silent"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    },
    "27017": {
      "label": "MongoDB",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "pnpm install && pnpm build",
  "postStartCommand": "chmod +x .devcontainer/start-dev.sh && .devcontainer/start-dev.sh",

  "remoteUser": "node",
  "remoteEnv": {
    "NODE_ENV": "development",
    "DATABASE_URL": "mongodb://admin:password@localhost:27017/chainbet?authSource=admin",
    "REDIS_URL": "redis://localhost:6379",
    "ELASTICSEARCH_URL": "http://localhost:9200"
  },

  "initializeCommand": "echo 'Starting ChainBet Development Environment...'",
  "onCreateCommand": "echo 'DevContainer created successfully!'",
  "updateContentCommand": "pnpm install",
  "postAttachCommand": "echo 'Welcome to ChainBet Development Environment! ðŸš€'"
}
